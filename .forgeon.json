{
  "schema_version": "v1",
  "framework": "hono",
  "type": "server",

  "build_system": "buildpacks",
  "deployment_target": "docker",

  "runtime": "bun",
  "version": "1.1.0",

  "port": 3700,

  "build_meta": {
  "builder": "localhost:5050/forgeon/builder-bun:jammy",
    "buildpacks": [
      "localhost:5050/forgeon/buildpack-bun:0.0.1"
    ],
    "env": {
      "BUN_VERSION": "1.1.0",
      "BUN_INSTALL_FLAGS": "--frozen-lockfile",
      "BUN_BUILD_SCRIPT": "build",
      "BUN_START_SCRIPT": "start"
    },
    "notes": "Bun CNB chain: install bun -> bun install -> bun run build -> launch bun run start."
  }
}
